{
    "$schema": "https://aka.ms/json-schemas/copilot-extensions/v2.1/plugin.schema.json",
    "schema_version": "v2.1",
    "name_for_human": "TicketPlugin",
    "description_for_human": "A plugin to manage tickets",
    "namespace": "ticketplugin",
    "functions": [
        {
            "name": "DeleteTicket",
            "description": "Delete the ticket given an id"
        },
        {
            "name": "GetTickets",
            "description": "Get the tickets with a given keyword in the title",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.title",
                        "subtitle": "$.id"
                    },
                    "static_template": {
                        "type": "AdaptiveCard",
                        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                        "version": "1.5",
                        "body": [
                            {
                                "type": "Container",
                                "$data": "${$root}",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "id: ${if(id, id, 'N/A')}",
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "title: ${if(title, title, 'N/A')}",
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "description: ${if(description, description, 'N/A')}",
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "assignedTo: ${if(assignedTo, assignedTo, 'N/A')}",
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "severity: ${if(severity, severity, 'N/A')}",
                                        "wrap": true
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "CreateTicket",
            "description": "Create a new ticket",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.title",
                        "subtitle": "$.description"
                    },
                    "static_template": {
                        "type": "AdaptiveCard",
                        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                        "version": "1.5",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "partitionKey: ${if(partitionKey, partitionKey, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "rowKey: ${if(rowKey, rowKey, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "timestamp: ${if(timestamp, timestamp, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "title: ${if(title, title, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "description: ${if(description, description, 'N/A')}",
                                "wrap": true
                            }
                        ]
                    }
                }
            }
        }
    ],
    "runtimes": [
        {
            "type": "OpenApi",
            "auth": {
                "type": "None"
            },
            "spec": {
                "url": "apiSpecificationFile/openapi.json"
            },
            "run_for_functions": [
                "DeleteTicket",
                "GetTickets",
                "CreateTicket"
            ]
        }
    ],
    "capabilities": {
        "localization": {},
        "conversation_starters": [
            {
                "text": "Delete the ticket given an id"
            },
            {
                "text": "Get the tickets with a given keyword in the title"
            },
            {
                "text": "Create a new ticket"
            }
        ]
    }
}
