{
  "openapi": "3.0.1",
  "info": {
    "title": "Ticket APIs",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://ticketapi-net8.azurewebsites.net/api"
    }
  ],
  "paths": {
    "/tickets/{id}": {
      "delete": {
        "description": "Delete the ticket given an id",
        "operationId": "DeleteTicket",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ticket id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ticket deleted"
          }
        }
      }
    },
    "/tickets": {
      "get": {
        "description": "Get the tickets with a given keyword in the title or assigned to a specific person",
        "operationId": "GetTickets",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "The search keyword",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "assignedTo",
            "in": "query",
            "description": "The person assigned to the ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ticket"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a new ticket",
        "operationId": "CreateTicket",
        "requestBody": {
          "description": "The ticket to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ticket"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/myTicketTable"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ticket": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "assignedTo": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "myTicketTable": {
        "type": "object",
        "properties": {
          "partitionKey": {
            "type": "string"
          },
          "rowKey": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "eTag": {
            "$ref": "#/components/schemas/eTag"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "assignedTo": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          }
        }
      },
      "eTag": {
        "type": "object"
      }
    }
  }
}